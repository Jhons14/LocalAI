# Staging Environment Configuration

# Application Settings
APP_NAME=LocalAI Chat API (Staging)
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=staging
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Database Settings
DB_URL=postgresql://user:password@localhost:5432/localai_staging
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=15

# CORS Settings
CORS_ORIGINS=https://staging.yourdomain.com,http://localhost:4321,http://localhost:3000
CORS_CREDENTIALS=true

# Security Settings (Staging - Semi-Secure)
SECURITY_SECRET_KEY=staging-secret-key-change-for-production
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION_MINUTES=15

# Rate Limiting (Moderate)
RATE_LIMIT_CHAT_REQUESTS_PER_MINUTE=50
RATE_LIMIT_KEY_OPERATIONS_PER_MINUTE=20
RATE_LIMIT_MODEL_REQUESTS_PER_MINUTE=30

# Ollama Settings
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3

# OpenAI Settings
OPENAI_TIMEOUT=30
OPENAI_MAX_TOKENS=4000
OPENAI_MAX_RETRIES=2

# Input Validation (Moderate)
MAX_PROMPT_LENGTH=20000
MAX_THREAD_ID_LENGTH=150

# Storage
CONFIG_DIR=config
DATA_DIR=data