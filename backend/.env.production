# Production Environment Configuration

# Application Settings
APP_NAME=LocalAI Chat API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Settings (Use PostgreSQL in production)
DB_URL=postgresql://user:password@localhost:5432/localai_prod
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# CORS Settings (Restrict to your domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Security Settings (Production - Secure)
SECURITY_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_MAX_LOGIN_ATTEMPTS=3
SECURITY_LOCKOUT_DURATION_MINUTES=30

# Rate Limiting (Restrictive)
RATE_LIMIT_CHAT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_KEY_OPERATIONS_PER_MINUTE=10
RATE_LIMIT_MODEL_REQUESTS_PER_MINUTE=20

# Ollama Settings
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=2

# OpenAI Settings
OPENAI_TIMEOUT=30
OPENAI_MAX_TOKENS=4000
OPENAI_MAX_RETRIES=2

# Input Validation (Restrictive)
MAX_PROMPT_LENGTH=10000
MAX_THREAD_ID_LENGTH=100

# Storage
CONFIG_DIR=config
DATA_DIR=data