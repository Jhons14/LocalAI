# Development Environment Configuration

# Application Settings
APP_NAME=LocalAI Chat API (Development)
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Server Settings
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Database Settings
DB_URL=sqlite:///./data/dev.db
DB_ECHO=true
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# CORS Settings
CORS_ORIGINS=http://localhost:4321,http://localhost:3000,http://127.0.0.1:4321,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Security Settings (Development - Less Secure)
SECURITY_SECRET_KEY=dev-secret-key-not-for-production
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=60
SECURITY_MAX_LOGIN_ATTEMPTS=10
SECURITY_LOCKOUT_DURATION_MINUTES=5

# Rate Limiting (More Permissive)
RATE_LIMIT_CHAT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_KEY_OPERATIONS_PER_MINUTE=50
RATE_LIMIT_MODEL_REQUESTS_PER_MINUTE=100

# Ollama Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=60
OLLAMA_MAX_RETRIES=3

# OpenAI Settings
OPENAI_TIMEOUT=60
OPENAI_MAX_TOKENS=4000
OPENAI_MAX_RETRIES=3

# Input Validation (More Permissive)
MAX_PROMPT_LENGTH=50000
MAX_THREAD_ID_LENGTH=200

# Storage
CONFIG_DIR=config
DATA_DIR=data